<mui:ModernWindow x:Class="PromptWindowsPrototype.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI" 
        Style="{StaticResource MainWindowStyle}"
        ContentSource="/PromptWindowsPrototype;component/Views/PWPMain/PWPMain.xaml"
        WindowStartupLocation="CenterScreen">
    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="System">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Main" Source="/PromptWindowsPrototype;component/Views/PWPMain/PWPMain.xaml"/>
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
</mui:ModernWindow>
