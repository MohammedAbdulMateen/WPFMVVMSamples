<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mui="http://firstfloorsoftware.com/ModernUI">
    <!-- Region Main Window -->

    <Style x:Key="MainWindowStyle" TargetType="{x:Type mui:ModernWindow}">
        <Setter Property="Title" Value="Main Window"/>
        <Setter Property="IsTitleVisible" Value="True"/>
        <Setter Property="MinHeight" Value="600"/>
        <Setter Property="MinWidth" Value="800"/>
        <Setter Property="WindowState" Value="Maximized"/>
    </Style>

    <!-- End Region -->

    <!-- Region Prompt Window -->

    <Style x:Key="PromptWindowStyle" TargetType="{x:Type mui:ModernWindow}">
        <Setter Property="IsTitleVisible" Value="True"/>
        <Setter Property="MinHeight" Value="200"/>
        <Setter Property="MinWidth" Value="500"/>
        <Setter Property="MaxHeight" Value="200"/>
        <Setter Property="MaxWidth" Value="500"/>
        <Setter Property="ResizeMode" Value="CanMinimize"/>
    </Style>

    <!-- End Region -->

</ResourceDictionary>
